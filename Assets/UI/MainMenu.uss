/* Main Menu USS Stylesheet */
/* Color Palette:
   olive-bark: #665638
   copper: #B97542
   dusk-blue: #325575
   pale-oak: #C5B8AB
   pearl-beige: #F1E4B9
*/

/* Root container */
.main-menu-container {
    flex-grow: 1;
    align-items: flex-start;
    justify-content: flex-start;
    padding-left: 60px;
    padding-top: 40px;
}

/* Title styling */
.title-label {
    font-size: 72px;
    color: #F1E4B9; /* pearl-beige */
    -unity-font-style: bold-and-italic;
    margin-bottom: 40px;
    -unity-text-outline-width: 2px;
    -unity-text-outline-color: #665638; /* olive-bark */
    opacity: 1;
    transition-duration: 0.75s;
    transition-property: opacity, color;
}

/* Title fading state for transition */
.title-label.title-fading {
    opacity: 0;
}

/* Button container */
.button-container {
    align-items: flex-start;
    justify-content: flex-start;
}

/* Base button styling - dusk-blue with transparency */
.menu-button {
    width: 260px;
    height: 55px;
    margin: 8px 0;
    padding: 10px 20px;
    font-size: 22px;
    -unity-font-style: bold;
    color: #F1E4B9; /* pearl-beige */
    background-color: rgba(50, 85, 117, 0.75); /* dusk-blue with transparency */
    border-width: 2px;
    border-color: rgba(241, 228, 185, 0.5); /* pearl-beige transparent */
    border-radius: 8px;
    transition-duration: 0.15s;
}

/* Button hover state */
.menu-button:hover {
    background-color: rgba(50, 85, 117, 0.9); /* dusk-blue less transparent */
    border-color: #F1E4B9; /* pearl-beige solid */
    scale: 1.03;
}

/* Button active/pressed state */
.menu-button:active {
    background-color: rgba(102, 86, 56, 0.85); /* olive-bark */
    color: #F1E4B9; /* pearl-beige */
    scale: 0.98;
}

