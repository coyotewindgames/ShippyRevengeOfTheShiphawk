/* ========== SETTINGS PANEL ========== */

.settings-panel {
    position: absolute;
    left: 50%;
    top: 50%;
    translate: -50% -50%;
    width: 320px;
    padding: 20px;
    background-color: rgba(50, 85, 117, 0.92); /* dusk-blue */
    border-width: 2px;
    border-color: rgba(241, 228, 185, 0.6); /* pearl-beige */
    border-radius: 12px;
    transition-duration: 0.2s;
}

.settings-panel.hidden {
    display: none;
}

.settings-title {
    font-size: 28px;
    color: #F1E4B9; /* pearl-beige */
    -unity-font-style: bold;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(241, 228, 185, 0.4);
}

.settings-section-label {
    font-size: 18px;
    color: #B97542; /* copper */
    -unity-font-style: bold;
    margin-top: 12px;
    margin-bottom: 8px;
}

.setting-row {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 6px 0;
    height: 30px;
}

.setting-label {
    font-size: 14px;
    color: #C5B8AB; /* pale-oak */
    width: 100px;
    -unity-text-align: middle-left;
}

.setting-slider {
    flex-grow: 1;
    margin: 0 8px;
    min-width: 120px;
}

.setting-slider > .unity-base-slider__dragger {
    background-color: #B97542; /* copper */
    border-radius: 6px;
}

.setting-slider > .unity-base-slider__tracker {
    background-color: rgba(197, 184, 171, 0.4); /* pale-oak */
    border-radius: 4px;
}

.setting-value {
    font-size: 14px;
    color: #F1E4B9; /* pearl-beige */
    width: 45px;
    -unity-text-align: middle-right;
}

.setting-toggle {
    margin-left: auto;
}

.setting-toggle > .unity-toggle__checkmark {
    background-color: rgba(197, 184, 171, 0.5); /* pale-oak */
    border-color: #B97542; /* copper */
    border-width: 2px;
    border-radius: 4px;
}

.setting-toggle:checked > .unity-toggle__checkmark {
    background-color: #B97542; /* copper */
}

.close-button {
    margin-top: 16px;
    width: 100%;
    height: 40px;
}

/* ========== HORROR TRANSITION STYLES ========== */

.horror-button {
    background-color: rgba(100, 20, 20, 0.85); /* dark blood red */
    border-color: rgba(150, 30, 30, 0.8);
    color: #F1E4B9;
    transition-duration: 1s;
}

.horror-button:hover {
    background-color: rgba(130, 25, 25, 0.95); /* slightly brighter blood red */
    border-color: rgba(180, 40, 40, 0.9);
}

.horror-button:active {
    background-color: rgba(80, 15, 15, 0.95); /* darker blood red */
}
